<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DepartamentoAdapter">

    <TextView
        android:id="@+id/label_nombreDepartamento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre Departamento"
        android:textColor="#E862DA"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.044" />

    <EditText
        android:id="@+id/input_nombre_departamento"
        android:layout_width="293dp"
        android:layout_height="46dp"
        android:layout_marginTop="64dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/label_nombreDepartamento"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="@+id/label_nombreDepartamento"
        app:layout_constraintTop_toBottomOf="@+id/label_nombreDepartamento"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/label_fechaInauguracion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Fecha de InauguraciÃ³n"
        android:textColor="#E862DA"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/input_nombre_departamento"
        app:layout_constraintHorizontal_bias="0.437"
        app:layout_constraintStart_toStartOf="@+id/input_nombre_departamento"
        app:layout_constraintTop_toBottomOf="@+id/input_nombre_departamento"
        app:layout_constraintVertical_bias="0.04" />

    <EditText
        android:id="@+id/input_fecha_inauguracion"
        android:layout_width="293dp"
        android:layout_height="46dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/label_fechaInauguracion"
        app:layout_constraintStart_toStartOf="@+id/label_fechaInauguracion"
        app:layout_constraintTop_toBottomOf="@+id/label_fechaInauguracion"
        app:layout_constraintVertical_bias="0.131" />

    <TextView
        android:id="@+id/label_ganancias"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ganancias del Departamento"
        android:textColor="#E862DA"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/input_fecha_inauguracion"
        app:layout_constraintHorizontal_bias="0.519"
        app:layout_constraintStart_toStartOf="@+id/input_fecha_inauguracion"
        app:layout_constraintTop_toBottomOf="@+id/input_fecha_inauguracion"
        app:layout_constraintVertical_bias="0.127" />

    <EditText
        android:id="@+id/input_ganancias"
        android:layout_width="293dp"
        android:layout_height="46dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/label_ganancias"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="@+id/label_ganancias"
        app:layout_constraintTop_toBottomOf="@+id/label_ganancias"
        app:layout_constraintVertical_bias="0.201" />



    <Button
        android:id="@+id/btn_crear_departamento"
        android:layout_width="156dp"
        android:layout_height="46dp"
        android:backgroundTint="#C92EB9"
        android:text="Guardar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/input_ganancias"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="@+id/input_ganancias"
        app:layout_constraintTop_toBottomOf="@+id/input_ganancias"
        app:layout_constraintVertical_bias="0.922" />

</androidx.constraintlayout.widget.ConstraintLayout>